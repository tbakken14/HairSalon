@{
    Layout = "_Layout";
}
<hr>
<h2>Clients</h2>

@using HairSalon.Models;
<h3>Clients of the salon</h3>
@if (@Model.Count == 0)
{
    <h3>No clients at this time.</h3>
}

@foreach (Client client in Model)
{
    <p>@Html.ActionLink(client.Name, "Details", "Clients", new {id = client.ClientId})</p>
}
<hr>
<h3>Add a new client</h3>
<p>@Html.ActionLink("New Client", "New", "Clients")</p>
<hr>